@model IEnumerable<Shoop.Models.Movie>

@{
    ViewBag.Title = "ShoopCart";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> Cart </title>
    <link href="Style.css" rel="stylesheet" />
</head>
<body style="color:black">
    <h2> Shoop Cart</h2>

    <div class="row col-md-12">

        <div class="col-md-2">
            <h4>Cover</h4>
        </div>
        <div class="col-md-3">
            <h4>Title</h4>
        </div>
        <div class="col-md-2">
            <h4>Quantity</h4>
        </div>
        <div class="col-md-2">
            <h4>Price</h4>
        </div>
        <div class="col-md-3">
            <h4>Sum</h4>
        </div>
    </div>


    @foreach (var item in Model)
    {

        <div class="row col-md-12">

            <div class="col-md-2">
                <img class="img-thumbnail m-2" src="@Html.DisplayFor(modelItem => item.MovieImageUrl)" />
            </div>
            <div class="col-md-3">
                <h4>@item.Title</h4>
            </div>
            <div class="col-md-2">
                <span>@Html.ActionLink("-", "RemoveFromCart", "ShoopingCart", new { id = item.Id }, null)</span>
               @*<span>@Html.TextBox("quantity", new { value = 1 })</span>*@
                <span>@Html.ActionLink("+", "AddToCart", "ShoopingCart", new { id = item.Id }, null)</span>

            </div>
            <div class="col-md-2">
                @item.Price
            </div>
            <div class="col-md-3">
                @item.Price
            </div>
        </div>

        <div class="row col-md-12">
            <div class="col-md-12">
                @*Total för Radsummor*@
                <h4>Total sum: </h4>@item.Price
            </div>
        </div>
    }
