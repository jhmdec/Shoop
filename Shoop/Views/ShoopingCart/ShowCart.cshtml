@model IEnumerable<Shoop.Models.Movie>

@{
    ViewBag.Title = "YourCart";
}

<h2>Your Cart</h2>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            
            <a class="btn btn-primary" id="B1" onclick="FnInc();">-</a>
            <input type="text" id="T1" value=1 />
            @Html.Label("Quantity")
            <a class="btn btn-primary" id="B2" onclick="FnDec();">+</a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Total)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <input type="text" id="T1" value=1 />
                <a class="btn btn-primary" id="B1" onclick="FnInc();">+</a>

                <a class="btn btn-primary" id="B2" onclick="FnDec();">-</a>
            </td>


            <td>
                @Html.DisplayNameFor(model => model.Price)
            </td>
            @*<th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<script>
    function FnInc() {
        var Cnt = 0;
        Cnt = document.getElementById("T1").value;
        Cnt++;
        document.getElementById("T1").value = Cnt;
    }
    function FnDec() {
        var Cnt = 0;
        Cnt = document.getElementById("T1").value;
        if (Cnt == 0) {
            document.getElementById("T1").value = 0;
            alert("cannot be lessthan 0");
            return;
        }
        Cnt--;
        document.getElementById("T1").value = Cnt;
    }
</script>